{
  "name": "WhatsApp-Web-Plus",
  "version": "1.1.5",
  "description": "Extensi√≥n para mejorar WhatsApp Web",
  "update_url": "https://leyia.app/whatsapp/updates.xml",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*"
      ],
      "js": [
        "./index.js"
      ],
      "run_at": "document_idle",
      "all_frames": false,
      "world": "ISOLATED"
    }
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "manifest_version": 3,
  "web_accessible_resources": [
    {
      "resources": [
        "packed.js",
        "message-manager.html",
        "message-manager.js"
      ],
      "matches": [
        "https://web.whatsapp.com/*"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://*.tu-dominio.com/*",
      "*://*.appweb1.com/*"
    ]
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
